{
    "openapi": "3.0.0",
    "info": {
      "title": "Class Scheduler API",
      "description": "API for managing class schedules, users, comments, and more.",
      "version": "3.0.0"
    },
    "servers": [
      {
        "url": "localhost:5000"
      }
    ],
    "paths": {
      "/": {
        "get": {
          "summary": "Welcome",
          "description": "Welcome to our Class Schedule API",
          "responses": {
            "200": {
              "description": "Welcome message"
            }
          }
        }
      },
      "/auth/signup": {
        "post": {
          "summary": "User Registration",
          "description": "Register a new user.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserRegistration"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "User registered successfully"
            },
            "401": {
              "description": "Username or Email Already Exists"
            }
          }
        }
      },
      "/auth/login": {
        "post": {
          "summary": "User Login",
          "description": "Log in with username and password.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserLogin"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Login Successful"
            },
            "401": {
              "description": "Invalid Username or Password"
            }
          }
        }
      },
      "/auth/logout": {
        "delete": {
          "summary": "User Logout",
          "description": "Log out the user (authentication required).",
          "responses": {
            "200": {
              "description": "You have been logged out successfully"
            }
          }
        }
      },
      "/comment": {
        "get": {
          "summary": "Get Comments",
          "description": "Get comments related to a session.",
          "parameters": [
            {
              "$ref": "#/components/parameters/SessionId"
            }
          ],
          "responses": {
            "200": {
              "description": "List of comments"
            }
          }
        },
        "post": {
          "summary": "Create Comment",
          "description": "Create a new comment for a session.",
          "parameters": [
            {
              "$ref": "#/components/parameters/SessionId"
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Comment"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Comment created successfully"
            }
          }
        }
      },
      "/mentors": {
        "get": {
          "summary": "Get Mentors",
          "description": "Get the list of technical mentors.",
          "responses": {
            "200": {
              "description": "List of mentors"
            }
          }
        },
        "post": {
          "summary": "Add Mentor",
          "description": "Add a new technical mentor.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Mentor"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Mentor added successfully"
            }
          }
        }
      },
      "/modules": {
        "get": {
          "summary": "Get Modules",
          "description": "Get the list of modules.",
          "responses": {
            "200": {
              "description": "List of modules"
            }
          }
        },
        "post": {
          "summary": "Create Module",
          "description": "Create a new module.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Module"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Module created successfully"
            }
          }
        },
        "patch": {
          "summary": "Update Module",
          "description": "Update an existing module.",
          "parameters": [
            {
              "$ref": "#/components/parameters/ModuleId"
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Module"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Module updated successfully"
            }
          }
        }
      },
      "/sessions": {
        "get": {
          "summary": "Get Sessions",
          "description": "Get the list of sessions.",
          "responses": {
            "200": {
              "description": "List of sessions"
            }
          }
        },
        "post": {
          "summary": "Create Session",
          "description": "Create a new session.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Session"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Session created successfully"
            }
          }
        }
      },
      "/sessions/{session_id}": {
        "get": {
          "summary": "Get Session by ID",
          "description": "Get a session by its ID.",
          "parameters": [
            {
              "$ref": "#/components/parameters/SessionId"
            }
          ],
          "responses": {
            "200": {
              "description": "Session details"
            },
            "404": {
              "description": "Session not found"
            }
          }
        },
        "put": {
          "summary": "Update Session",
          "description": "Update an existing session.",
          "parameters": [
            {
              "$ref": "#/components/parameters/SessionId"
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Session"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Session updated successfully"
            },
            "404": {
              "description": "Session not found"
            }
          }
        },
        "delete": {
          "summary": "Delete Session",
          "description": "Delete a session by its ID.",
          "parameters": [
            {
              "$ref": "#/components/parameters/SessionId"
            }
          ],
          "responses": {
            "200": {
              "description": "Session deleted successfully"
            },
            "404": {
              "description": "Session not found"
            }
          }
        }
      },
      "/students": {
        "get": {
          "summary": "Get Students",
          "description": "Get the list of students.",
          "responses": {
            "200": {
              "description": "List of students"
            }
          }
        },
        "post": {
          "summary": "Add Student",
          "description": "Add a new student.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Student"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Student added successfully"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "UserRegistration": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "phone_number": {
              "type": "string"
            },
            "user_type": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "required": [
            "username",
            "email",
            "phone_number",
            "password"
          ]
        },
        "UserLogin": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "required": [
            "email",
            "password"
          ]
        },
        "Comment": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string"
            }
          },
          "required": [
            "text"
          ]
        },
        "Mentor": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "profile_img": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "email",
            "profile_img"
          ]
        },
        "Module": {
          "type": "object",
          "properties": {
            "module_name": {
              "type": "string"
            },
            "date": {
              "type": "string"
            },
            "time": {
              "type": "string"
            },
            "invite_link": {
              "type": "string"
            }
          },
          "required": [
            "module_name",
            "date",
            "time",
            "invite_link"
          ]
        },
        "Session": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "announcements": {
              "type": "string"
            }
          },
          "required": [
            "name"
          ]
        },
        "Student": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "profile_img": {
              "type": "string"
            },
            "student_id": {
              "type": "integer"
            }
          },
          "required": [
            "name",
            "email",
            "profile_img",
            "student_id"
          ]
        }
      },
      "parameters": {
        "SessionId": {
          "name": "session_id",
          "in": "path",
          "description": "ID of the session",
          "required": true,
          "schema": {
            "type": "integer"
          }
        },
        "ModuleId": {
          "name": "module_id",
          "in": "path",
          "description": "ID of the module",
          "required": true,
          "schema": {
            "type": "integer"
          }
        }
      }
    }
  }